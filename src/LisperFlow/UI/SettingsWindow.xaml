<Window x:Class="LisperFlow.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LisperFlow Settings" 
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E2E">
    
    <Window.Resources>
        <!-- Modern dark theme styles -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#A6ADC8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#89B4FA"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B4BEFE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#45475A"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#585B70"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Settings" FontSize="24" FontWeight="Bold" Foreground="#CDD6F4"/>
            <TextBlock Text="Configure LisperFlow preferences" Foreground="#6C7086" FontSize="12"/>
        </StackPanel>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Hotkey Settings -->
                <Border Background="#313244" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="âŒ¨ï¸ Hotkey" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Activation Key:" Style="{StaticResource SettingLabel}"/>
                            <TextBox x:Name="HotkeyTextBox" Grid.Column="1" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Text="Ctrl + Space"
                                     GotFocus="HotkeyTextBox_GotFocus"/>
                        </Grid>
                        
                        <TextBlock Text="Click the box and press your desired hotkey combination" 
                                   Foreground="#6C7086" FontSize="11" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- ASR Settings -->
                <Border Background="#313244" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¤ Speech Recognition" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Provider:" Style="{StaticResource SettingLabel}"/>
                            <ComboBox x:Name="AsrProviderCombo" Grid.Column="1"
                                      SelectionChanged="AsrProviderCombo_SelectionChanged">
                                <ComboBoxItem Content="Cloud (OpenAI Whisper)" Tag="Cloud"/>
                                <ComboBoxItem Content="Local (Whisper ONNX)" Tag="Local"/>
                            </ComboBox>
                        </Grid>
                        
                        <StackPanel x:Name="AsrApiKeyPanel" Margin="0,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="API Key:" Style="{StaticResource SettingLabel}"/>
                                <TextBox x:Name="AsrApiKeyTextBox" Grid.Column="1" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel x:Name="AsrLocalPanel" Margin="0,10,0,0" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Model Path:" Style="{StaticResource SettingLabel}"/>
                                <TextBox x:Name="AsrModelPathTextBox" Grid.Column="1" 
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,5,0"/>
                                <Button Grid.Column="2" Content="Browse" Style="{StaticResource SecondaryButton}"
                                        Click="BrowseAsrModel_Click"/>
                            </Grid>
                            <Button Content="Download Whisper Model" Style="{StaticResource SecondaryButton}"
                                    Margin="0,10,0,0" HorizontalAlignment="Left"
                                    Click="DownloadWhisperModel_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- LLM Settings -->
                <Border Background="#313244" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ§  AI Enhancement" Style="{StaticResource SectionHeader}"/>
                        
                        <CheckBox x:Name="EnableEnhancementCheckBox" 
                                  Content="Enable AI text enhancement"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"/>
                        
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Provider:" Style="{StaticResource SettingLabel}"/>
                            <ComboBox x:Name="LlmProviderCombo" Grid.Column="1"
                                      SelectionChanged="LlmProviderCombo_SelectionChanged">
                                <ComboBoxItem Content="Cloud (OpenAI GPT-4o-mini)" Tag="Cloud"/>
                                <ComboBoxItem Content="Local (Phi-3 ONNX)" Tag="Local"/>
                            </ComboBox>
                        </Grid>
                        
                        <StackPanel x:Name="LlmApiKeyPanel" Margin="0,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="API Key:" Style="{StaticResource SettingLabel}"/>
                                <TextBox x:Name="LlmApiKeyTextBox" Grid.Column="1" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel x:Name="LlmLocalPanel" Margin="0,10,0,0" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Model Path:" Style="{StaticResource SettingLabel}"/>
                                <TextBox x:Name="LlmModelPathTextBox" Grid.Column="1" 
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,5,0"/>
                                <Button Grid.Column="2" Content="Browse" Style="{StaticResource SecondaryButton}"
                                        Click="BrowseLlmModel_Click"/>
                            </Grid>
                            <Button Content="Download Phi-3 Model" Style="{StaticResource SecondaryButton}"
                                    Margin="0,10,0,0" HorizontalAlignment="Left"
                                    Click="DownloadPhi3Model_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Audio Settings -->
                <Border Background="#313244" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ”Š Audio" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Microphone:" Style="{StaticResource SettingLabel}"/>
                            <ComboBox x:Name="MicrophoneCombo" Grid.Column="1"/>
                        </Grid>
                        
                        <CheckBox x:Name="UseGpuCheckBox" 
                                  Content="Use GPU acceleration (DirectML)"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                    Click="Cancel_Click" Margin="0,0,10,0"/>
            <Button Content="Save" Style="{StaticResource ModernButton}" 
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
