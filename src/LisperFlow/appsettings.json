{
  "Audio": {
    "DeviceId": null,
    "SampleRate": 48000,
    "VadThreshold": 0.4,
    "BufferSeconds": 10,
    "PreRollMs": 500
  },
  "Hotkey": {
    "UseControl": true,
    "UseAlt": false,
    "UseShift": false,
    "UseWin": false,
    "VirtualKeyCode": 32
  },
  "Asr": {
    "Provider": "Cloud",
    "LocalModelPath": "models/whisper-small-onnx",
    "OpenAiApiKey": "",
    "Language": "en",
    "UseGpu": true
  },
  "Llm": {
    "Provider": "Cloud",
    "LocalModelPath": "models/phi3-mini-onnx",
    "OpenAiApiKey": "",
    "CloudModel": "gpt-4o-mini",
    "EnableEnhancement": true,
    "UseGpu": true
  },
  "Streaming": {
    "Enabled": true,
    "Provider": "Deepgram",
    "ChunkDurationMs": 100,
    "TypingDelayMs": 25,
    "ShowPartialResults": true,
    "ApplyLlmEnhancement": "AfterFinalization"
  },
  "AzureSpeech": {
    "SubscriptionKey": "",
    "Region": "eastus",
    "Language": "en-US",
    "EnableProfanityFilter": false
  },
  "Deepgram": {
    "ApiKey": "",
    "Language": "en",
    "Model": "nova-2",
    "Endpointing": 300,
    "FillerWords": true,
    "Numerals": true,
    "Diarize": false,
    "ProfanityFilter": false,
    "Keyterms": [
      "LisperFlow",
      "Deepgram",
      "ASR"
    ]
  },
  "Privacy": {
    "StoreTranscripts": false,
    "SendAnalytics": false,
    "DataRetentionDays": 30
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/lisperflow-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}